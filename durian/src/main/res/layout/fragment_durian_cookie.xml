<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".DurianCookieFragment">

        <ImageView
            android:id="@+id/iv_durian_cookie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_durian_cookie"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_recommend_banana_milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_recommend_banana_milk"
            app:layout_constraintTop_toBottomOf="@+id/iv_durian_cookie"
            app:layout_constraintStart_toStartOf="@+id/iv_durian_cookie"
            app:layout_constraintEnd_toEndOf="@+id/iv_durian_cookie"
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>